<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".Aboutceo">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="285dp"
        android:layout_height="327dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149"
        app:srcCompat="@drawable/aboutus" />

    <TextView
        android:id="@+id/abouttextid"
        android:layout_width="277dp"
        android:layout_height="190dp"
        android:text="Hi being the creator of pizza daily,by the application I want to provide certain recommedations for people who like to consume pizza almost on daily basis. I don't support daily pizza consumption but i do want to suggest that what pizza would be the healthiest and yet still tasty.Pizza Daily offers you to select from our recommended pizza outlets."
        android:textColor="#E6FF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907" />
